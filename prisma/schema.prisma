generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  userId      String // generate with clerk
  title       String
  description String?
  image       String
  price       Int
  stock       Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([title, createdAt, userId])
  @@map("products")
}

model SaleRecord {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  userId      String
  title       String
  description String?
  image       String
  price       Int
  qty         Int // total product sales

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([title, createdAt, userId])
  @@map("sales-records")
}
