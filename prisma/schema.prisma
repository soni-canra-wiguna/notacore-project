generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Unit {
  PCS // Pieces / buah
  PACK // Pack
  KG // Kilogram
  GRAM // Gram
  L // Liter
  ML // Milliliter
  SACHET // Sachet
  BOX // Box / kardus
  DOZEN // Dozen/ lusin
}

model Product {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  userId      String // generate with clerk
  title       String
  description String?
  image       String
  price       Int
  category    String
  stock       Int
  unit        Unit?   @default(PCS)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([title, createdAt, userId])
  @@map("products")
}

model SaleRecord {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  userId     String
  title      String
  category   String
  image      String
  price      Int
  quantity   Int // total product sales
  totalPrice Int // price * quantity

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([title, createdAt, userId])
  @@map("sales-records")
}
